@model IEnumerable<CrudContactListMvc.Models.Spa>

<head>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet">
</head>

<style>
	.space-grotesk-regular {
		font-family: "Space Grotesk", sans-serif;
		font-optical-sizing: auto;
		font-weight: 400;
		font-style: normal;
	}

	* {
		font-family: space-grotesk-regular;
	}

	.spa-class-box {
		background-color: #D6D9CC;
		margin-top: 30px;
		margin-bottom: 30px;
		text-align: center;
		border: solid #0D0D0D 2px;
		border-radius: 25px;
		width: 700px;
		margin-left: auto;
		margin-right: auto;
		height: 1000px;
	}
	
	.spa-view-button {
		padding: 20px;
		background-color: #6F7356;
	}
	
	.spa-view-button button {
		background-color: #BF3604;
	}
	
	.spa-view-content {
		background-color: #D99982;
		height: 800px;
	}

</style>

<body>
	<h1>Single Page Application</h1>
	<p>Current time: @DateTime.Now</p>


	<div class="spa-class-box">
		<h2>Contacts Index</h2>
		<div class="spa-view-button">
			<form asp-action="ShowContactIndex" asp-controller="Spas">
				<button id="buttonGetContactIndex"
						name="buttonGetContactIndex"
						type="submit"
						value="butPressed">Get Contact Index</button>
			</form>
		</div>
		<div class="spa-view-content" id="contactIndexContent">
			<p>After button click, here will be loaded content.</p>
		</div>
	</div>



































